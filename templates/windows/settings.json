{
    "C_Cpp_Config.cCompilerPath": "gcc",
    "C_Cpp_Config.cppCompilerPath": "g++",
    "C_Cpp_Config.debuggerPath": "gdb",
    "C_Cpp_Config.makePath": "make",
    // Editor settings
    "editor.tabSize": 4,
    "editor.rulers": [80, 120],
    "editor.renderWhitespace": "trailing",
    "editor.suggestSelection": "first",
    "diffEditor.ignoreTrimWhitespace": false,
    "terminal.integrated.defaultProfile.windows": "Command Prompt",
    // Explorer settings
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    // Files settings
    "files.autoSave": "onFocusChange",
    "files.associations": {
        ".clang*": "yaml"
    },
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook",
        "*.md": "vscode.markdown.preview.editor"
    },
    // Workbench settings
    "workbench.startupEditor": "newUntitledFile",
    // Git settings
    "git.enableSmartCommit": true,
    "git.autofetch": true,
    "git.confirmSync": false,
    // C/C++
    "C_Cpp.clang_format_sortIncludes": true,
    "C_Cpp.vcFormat.indent.preserveComments": true,
    "C_Cpp.vcFormat.indent.namespaceContents": false,
    "C_Cpp.vcFormat.indent.caseContentsWhenBlock": true,
    "C_Cpp.vcFormat.space.pointerReferenceAlignment": "right",
    "C_Cpp.simplifyStructuredComments": false,
    "C_Cpp.default.browse.limitSymbolsToIncludedHeaders": false,
    "C_Cpp.default.cppStandard": "c++17",
    "C_Cpp.default.cStandard": "c99",
    "C_Cpp.formatting": "clangFormat",
    // Cmake settings
    "cmake.configureOnOpen": false,
    "cmake.autoSelectActiveFolder": false,
    "cmake.configureOnEdit": false,
    // C/C++ Doxygen Docstrings
    "doxdocgen.file.fileTemplate": "@file {name}",
    "doxdocgen.cpp.tparamTemplate": "@tparam {param} ",
    "doxdocgen.generic.briefTemplate": "@brief {text}",
    "doxdocgen.generic.boolReturnsTrueFalse": false,
    "doxdocgen.generic.paramTemplate": "@param {param} ",
    "doxdocgen.generic.returnTemplate": "@return",
    "doxdocgen.generic.includeTypeAtReturn": false,
    // IntelliSense AI Extension
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    // Formatting tools
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "prettier.tabWidth": 4,
    "[c]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "ms-vscode.cpptools"
    },
    "[cpp]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "ms-vscode.cpptools"
    },
    // Other extensions
    "formatContextMenu.closeAfterSave": true
}
