{
    "name": "vscode-c-cpp-config",
    "displayName": "C/C++ Config",
    "description": "Creates all needed config files for simple C/C++ projects.",
    "version": "0.4.0",
    "publisher": "franneck94",
    "license": "MIT",
    "icon": "icon.png",
    "galleryBanner": {
        "color": "#9c9c9c",
        "theme": "dark"
    },
    "engines": {
        "vscode": "^1.58.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets"
    ],
    "tags": [
        "c",
        "c++",
        "configuration"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/franneck94/vscode-c-cpp-config.git"
    },
    "homepage": "https://github.com/franneck94/vscode-c-cpp-config/README.md",
    "bugs": {
        "url": "https://github.com/franneck94/vscode-c-cpp-config/issues"
    },
    "activationEvents": [
        "*"
    ],
    "main": "./dist/main",
    "contributes": {
        "taskDefinitions": [
            {
                "type": "C_Cpp_Config"
            }
        ],
        "commands": [
            {
                "command": "C_Cpp_Config.generateConfigC",
                "title": "Generate C Config Files",
                "when": "C_Cpp_Config:activatedExtension",
                "category": "C/C++ Config"
            },
            {
                "command": "C_Cpp_Config.generateConfigCpp",
                "title": "Generate C++ Config Files",
                "when": "C_Cpp_Config:activatedExtension",
                "category": "C/C++ Config"
            },
            {
                "command": "C_Cpp_Config.generateConfigCMinimal",
                "title": "Generate C Config Files (Minimal)",
                "when": "C_Cpp_Config:activatedExtension",
                "category": "C/C++ Config"
            },
            {
                "command": "C_Cpp_Config.generateConfigCppMinimal",
                "title": "Generate C++ Config Files (Minimal)",
                "when": "C_Cpp_Config:activatedExtension",
                "category": "C/C++ Config"
            }
        ]
    },
    "scripts": {
        "webpack": "webpack --mode development",
        "webpack-watch": "webpack --mode development --watch",
        "vscode:prepublish": "npm run webpack",
        "compile": "npm run webpack",
        "compile-watch": "npm run webpack-watch",
        "watch": "tsc -watch -p ./",
        "lint": "eslint src --ext ts",
        "pretest": "tsc -p ./ && tsc -p test.tsconfig.json",
        "test": "node ./dist/test/unitTest/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.0.0",
        "@types/node": "^14.0.27",
        "@types/vscode": "^1.53.0",
        "@typescript-eslint/eslint-plugin": "^4.1.1",
        "@typescript-eslint/eslint-plugin-tslint": "^4.20.0",
        "@typescript-eslint/parser": "^4.1.1",
        "eslint": "^7.9.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jsdoc": "^32.3.0",
        "glob": "^7.1.6",
        "mocha": "^8.1.3",
        "prettier": "2.2.1",
        "typescript": "^4.0.2",
        "webpack": "^5.28.0",
        "webpack-cli": "^4.6.0"
    },
    "dependencies": {
        "json5": "^2.2.0",
        "ts-loader": "^8.1.0",
        "tslint": "^6.1.3",
        "vsce": "^1.87.1",
        "vscode-test": "^1.6.1"
    },
    "extensionDependencies": [
        "ms-vscode.cpptools"
    ]
}
